local owner = Seller
local plr = game:GetService("Players")[owner]
local me = game:GetService("Players").LocalPlayer.Name
local userId = game:GetService("Players").LocalPlayer.userId
local thumbType = Enum.ThumbnailType.HeadShot
local thumbSize = Enum.ThumbnailSize.Size420x420
local image = game:GetService("Players"):GetUserThumbnailAsync(userId, thumbType, thumbSize)


game.StarterGui:SetCore("SendNotification", {
	Title = "Welcome ".. me; 
	Text = "Thank you for using Alt Control. Type .cmds if you're lost.";
	Icon = game:GetService("Players"):GetUserThumbnailAsync(127511899, thumbType, thumbSize);
	Duration = 18;
})

wait(4)

game.StarterGui:SetCore("SendNotification", {
	Title = "Welcome ".. me; 
	Text = "this script was entirely made by Blitzy with the help of Ashley.";
	Icon = game:GetService("Players"):GetUserThumbnailAsync(642971557, thumbType, thumbSize);
	Duration = 18;
})

wait(2)

if me == owner then
	game.StarterGui:SetCore("SendNotification", {
		Title = "Seller Status:"; 
		Text = "You are the Seller.";
		Icon = image;
		Duration = 30;
	})
else
	game.StarterGui:SetCore("SendNotification", {
		Title = "Seller Status:"; 
		Text = "You are an Alt.";
		Icon = image;
		Duration = 8;
	})
end


wait(2)

if plr ~= nil then
	game.StarterGui:SetCore("SendNotification", {
		Title = "Seller Status: "; 
		Text = "Seller ".. owner .. "‚ØÅ is online";
		Icon = image;
		Duration = 10;
	})
end
